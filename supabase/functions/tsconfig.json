{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["dom", "es2022"],
    "strict": false,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "deno.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
